{% extends 'base.html.twig' %}

{% block title %}Status{% endblock %}

{% block body %}
    <h1>Status</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ status.id }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ status.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ status.code }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ status.label }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ status.value }}</td>
            </tr>
            <tr>
                <th>Order</th>
                <td>{{ status.order }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ status.type }}</td>
            </tr>
            <tr>
                <th>MetaStatus</th>
                <td>{{ status.metaStatus }}</td>
            </tr>
            <tr>
                <th>ForStat</th>
                <td>{{ status.forStat ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('status_index') }}">back to list</a>

    <a href="{{ path('status_edit', {'id': status.id}) }}">edit</a>

    {{ include('status/_delete_form.html.twig') }}
{% endblock %}
